<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="/css/comments.css">
     <link rel="preconnect" href="https://fonts.googleapis.com">
     <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
     <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
</head>
<body>
    <div class="addcomment">
        <h1>Add Comments</h1>
        <form action="/dashboard/user-list/comments" method="post">
            <div class="email-ad">Comment To:<input type="email" name="email_address" placeholder="Email"></div>
            <div class="comment"> <input class="input" type="text" name="comment" placeholder="Add Comment here.....">
            <button>Add</button></div>
        </form>
    </div>
   
   
<div class="table-data">
<h2>Added Comments (sorted by time added)</h2>
    
 <table border="1">
      <tr>
         <th>Email address</th>
         <th>Comments</th>
      </tr>
 
      <%
      if(userData.length!=0){
      var i=1;
      userData.forEach(function(data){
      %>
        <tr>
        
           <td><%=data.email_address %></td>
           <td><%=data.comments %></td>
        </tr>  
        <%  i++;}) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    </div>

    
</body>
</html>