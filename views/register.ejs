  <title>Signup</title>
  <link rel="stylesheet" type="text/css" href="css/register.css" />
</head>
<body>
  <div class="wrapper">
    <h2>Registration</h2>
    <form action="register" method="post">
      <div class="input-box">
        <input type="text" placeholder="Enter your name" required="" name="name">
      </div>
      <div class="input-box">
        <input type="email" placeholder="Enter your email" required="" name="email_address">
      </div>
      <div class="input-box">
        <input type="text" placeholder="Enter your department" required="" name="department">
      </div>
      <div class="input-box">
        <input type="text" placeholder="Enter your Hostel name" required="" name="hostel">
      </div>
      <div class="input-box">
        <input type="password" placeholder="Create password" required="" name="password">
      </div>
      <!-- <div class="input-box">
        <input type="password" placeholder="Confirm password" required="" name="confirmPassword">
      </div> -->
      <!-- <select name="opt" id="opt">
        <option value="Student">Student</option>
        <option value="Resident">Resident</option>
      </select> -->
      <div class="input-box button">
        <input type="submit" value="Register Now">
      </div>
      <div class="text">
        Already have an account? <a href="/login">Login now</a>
      </div>
    </form>
  </div>
</body>
</html>
